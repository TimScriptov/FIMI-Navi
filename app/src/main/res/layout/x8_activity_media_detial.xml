<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.fimi.album.widget.HackyViewPager
        android:id="@+id/viewpaper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/x8_layout_media_detail_top" />

    <include layout="@layout/x8_media_bottonm_bar" />

    <include layout="@layout/x8_layout_media_bar_select_bottom" />

    <FrameLayout
        android:id="@+id/fl_share"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageButton
        android:id="@+id/ibtn_left_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20.0dip"
        android:background="@drawable/album_left_slide"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ibtn_right_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/album_right_slide"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_play_max"
        android:layout_width="67.0dip"
        android:layout_height="67.0dip"
        android:layout_centerInParent="true"
        android:background="@drawable/album_btn_media_play_big_selector"
        android:visibility="gone" />
</RelativeLayout>