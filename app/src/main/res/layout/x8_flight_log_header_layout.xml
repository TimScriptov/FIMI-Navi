<?xml version="1.0" encoding="utf-8"?>
<com.fimi.kernel.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRootView"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/x8s_ai_line_history_item_layout_x1"
    android:orientation="horizontal">

    <com.fimi.kernel.percent.PercentLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/x8_iv_flightlog_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/x8_flightlog_collect_mark"
            android:visibility="invisible"
            app:layout_marginLeftPercent="3.68%w" />

        <TextView
            android:id="@+id/x8_tv_title_flightlog_date"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/x8_flightlog_date"
            android:textAlignment="center"
            android:textColor="@color/white_90"
            android:textSize="14.0dip"
            app:layout_marginLeftPercent="2.28%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/x8_tv_title_flightlog_mileage"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/x8_flightlog_mileage"
            android:textAlignment="center"
            android:textColor="@color/white_90"
            android:textSize="14.0dip"
            app:layout_marginLeftPercent="2.28%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/x8_tv_title_flightlog_time"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/x8_flightlog_time"
            android:textAlignment="center"
            android:textColor="@color/white_90"
            android:textSize="14.0dip"
            app:layout_marginLeftPercent="2.28%w"
            app:layout_widthPercent="20%w" />

        <TextView
            android:id="@+id/x8_tv_title_flightlog_size"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/x8_flightlog_size"
            android:textAlignment="center"
            android:textColor="@color/white_90"
            android:textSize="14.0dip"
            app:layout_marginLeftPercent="2.28%w"
            app:layout_widthPercent="20%w" />
    </com.fimi.kernel.percent.PercentLinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x8s_main_general_fw_upgrade_item_normal_x1"
        android:layout_alignParentBottom="true"
        android:background="@color/white_30" />
</com.fimi.kernel.percent.PercentRelativeLayout>