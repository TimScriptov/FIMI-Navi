<?xml version="1.0" encoding="utf-8"?>
<com.fimi.kernel.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60.0dip"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Version V1.0.1.10504"
        android:textColor="@color/white_100"
        android:textSize="@dimen/textsize_39"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_statement_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version "
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_statement_line1"
            android:text="@string/app_version"
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_statement_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Copyright Â© 2018 Fimi. All RIghts Reserved."
        android:textColor="@color/white_100"
        android:textSize="@dimen/textsize_39"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_statement_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Terms &amp; Conditions"
        android:textColor="@color/x8_track_select"
        android:textSize="@dimen/textsize_39"
        android:visibility="gone" />
</com.fimi.kernel.percent.PercentLinearLayout>