<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x10">

        <RelativeLayout
            android:id="@+id/rl_minus"
            android:layout_width="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x7"
            android:layout_height="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x7"
            android:layout_centerVertical="true">

            <View
                android:id="@+id/view_minus"
                android:layout_width="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x4"
                android:layout_height="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x2"
                android:layout_centerInParent="true"
                android:background="@drawable/x8_btn_minus_bg" />
        </RelativeLayout>

        <com.fimi.app.x8s.widget.X8SeekBarView
            android:id="@+id/sb_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x6"
            android:layout_marginRight="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x6"
            android:layout_toLeftOf="@+id/rl_plus"
            android:layout_toRightOf="@+id/rl_minus" />

        <RelativeLayout
            android:id="@+id/rl_plus"
            android:layout_width="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x7"
            android:layout_height="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x7"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <View
                android:id="@+id/view_plus"
                android:layout_width="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x6"
                android:layout_height="@dimen/x8s_ai_point_to_point__excute_confirm_layout_x6"
                android:layout_centerInParent="true"
                android:background="@drawable/x8_btn_plus_bg" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>