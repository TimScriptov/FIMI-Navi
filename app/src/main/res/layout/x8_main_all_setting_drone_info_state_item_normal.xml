<?xml version="1.0" encoding="utf-8"?>
<com.fimi.kernel.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/x8s_main_general_fw_upgrade_item_normal_x5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x8s_main_general_fw_upgrade_item_normal_x4"
        android:gravity="center"
        android:text="XX版本"
        android:textColor="@color/white_100"
        android:textSize="@dimen/textsize_39" />

    <TextView
        android:id="@+id/tv_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x8s_main_general_fw_upgrade_item_normal_x4"
        android:gravity="center"
        android:text="1.0.0"
        android:textColor="@color/white_100"
        android:textSize="@dimen/textsize_39" />

    <Button
        android:id="@+id/btn_event"
        android:layout_width="wrap_content"
        android:layout_height="27.0dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x8s_main_general_fw_upgrade_item_normal_x4"
        android:layout_toLeftOf="@+id/tv_normal"
        android:background="@drawable/x8_btn_fc_button_selector"
        android:text="@string/x8_fc_item_calibration"
        android:textColor="@color/white_100"
        android:textSize="@dimen/textsize_36"
        android:visibility="gone" />
</com.fimi.kernel.percent.PercentRelativeLayout>