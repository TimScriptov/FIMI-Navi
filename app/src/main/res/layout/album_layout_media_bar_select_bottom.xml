<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_select_bottom_rl"
    android:layout_width="fill_parent"
    android:layout_height="67.0dip"
    android:layout_alignParentBottom="true"
    android:background="@drawable/album_title_bottom_bg"
    android:gravity="center"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_share_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="42.0dip"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/bottom_share_ibtn"
                android:layout_width="31.0dip"
                android:layout_height="31.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/album_btn_share_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="@string/media_share"
                android:textColor="#66ffffff"
                android:textSize="9.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_delete_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bottom_delete_ibtn"
                android:layout_width="31.0dip"
                android:layout_height="31.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/album_btn_delete_selector" />

            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="@string/media_delete"
                android:textColor="#66ffffff"
                android:textSize="9.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>