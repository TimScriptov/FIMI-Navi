<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip">

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.0dip"
        android:maxLength="18"
        android:maxLines="2"
        android:text="请在手机【设置】中打开【个人热点】，出现如下画面表示连接成功"
        android:textColor="#ff000000"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_tv"
        android:layout_marginLeft="39.299988dip"
        android:layout_marginTop="19.299988dip"
        android:textColor="#b2000000"
        android:textSize="14.0sp" />

    <Button
        android:id="@+id/single_btn"
        android:layout_width="fill_parent"
        android:layout_height="52.599976dip"
        android:layout_below="@+id/content_iv"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/btn_dialog_center_selector"
        android:gravity="center"
        android:text="好的"
        android:textColor="#b2000000"
        android:textSize="14.0sp" />
</RelativeLayout>