<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x8s_double_dialog_custom_x8"
    android:layout_height="wrap_content"
    android:background="@drawable/x8_shape_dialog_content_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8s_double_dialog_custom_x1"
        android:layout_marginTop="@dimen/x8s_double_dialog_custom_x1"
        android:layout_marginRight="@dimen/x8s_double_dialog_custom_x1"
        android:background="@drawable/x8_img_double_dialog_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_double_dialog_custom_x4"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8s_double_dialog_custom_x5"
            android:layout_marginTop="@dimen/x8s_double_dialog_custom_x2"
            android:layout_marginRight="@dimen/x8s_double_dialog_custom_x5"
            android:ellipsize="none"
            android:gravity="center"
            android:maxLines="100"
            android:text="Message"
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39" />

        <CheckBox
            android:id="@+id/x8_cb_sing_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ai_follow_confirm_title2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18.0dip"
            android:layout_marginTop="13.0dip"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="@dimen/x8s_ai_point_to_point_confirm_layout_x2"
            android:text="@string/x8_playback_delete_hint"
            android:textColor="@color/white_90"
            android:textSize="@dimen/textsize_36" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x8s_double_dialog_custom_x3" />
    </LinearLayout>

    <View
        android:id="@+id/img_divide"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x8s_double_dialog_custom_x1"
        android:layout_below="@+id/layout_content"
        android:layout_marginLeft="@dimen/x8s_double_dialog_custom_x1"
        android:layout_marginRight="@dimen/x8s_double_dialog_custom_x1"
        android:background="#8000e8fd" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="@dimen/x8s_double_dialog_custom_x7"
        android:layout_height="@dimen/x8s_double_dialog_custom_x6"
        android:layout_below="@+id/img_divide"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x8s_double_dialog_custom_x1"
        android:layout_marginBottom="@dimen/x8s_double_dialog_custom_x1"
        android:background="@drawable/x8_img_double_dialog_left_selector"
        android:text="@string/cancel"
        android:textColor="@color/white_100"
        android:textSize="14.0dip" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="@dimen/x8s_double_dialog_custom_x7"
        android:layout_height="@dimen/x8s_double_dialog_custom_x6"
        android:layout_below="@+id/img_divide"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x8s_double_dialog_custom_x1"
        android:layout_marginBottom="@dimen/x8s_double_dialog_custom_x1"
        android:background="@drawable/x8_img_double_dialog_right_selector"
        android:text="@string/ensure"
        android:textColor="@color/white_100"
        android:textSize="14.0dip" />

    <View
        android:id="@+id/img_middle"
        android:layout_width="@dimen/x8s_double_dialog_custom_x1"
        android:layout_height="@dimen/x8s_double_dialog_custom_x6"
        android:layout_below="@+id/img_divide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x8s_double_dialog_custom_x1"
        android:background="#8000e8fd" />
</RelativeLayout>