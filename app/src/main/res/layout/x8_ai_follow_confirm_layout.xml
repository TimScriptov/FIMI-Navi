<?xml version="1.0" encoding="utf-8"?>
<com.fimi.kernel.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main_ai_follow_confirm_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true">

    <com.fimi.kernel.percent.PercentRelativeLayout
        android:id="@+id/rl_ai_follow_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2.7777%">

        <ImageView
            android:id="@+id/img_ai_follow_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/x8_img_return" />

        <TextView
            android:id="@+id/tv_ai_follow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/x8_ai_fly_follow"
            android:textColor="@color/white_90"
            android:textSize="@dimen/textsize_39" />
    </com.fimi.kernel.percent.PercentRelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/white_10"
        app:layout_marginTopPercent="11.11111%" />

    <LinearLayout
        android:id="@+id/ll_ai_follow_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        app:layout_marginTopPercent="16.9444444%">

        <RelativeLayout
            android:id="@+id/rl_ai_follow_normal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/img_ai_follow_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/x8_btn_ai_follow_normal" />

            <TextView
                android:id="@+id/tv_ai_follow_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ai_follow_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:text="@string/x8_ai_fly_follow_normal"
                android:textColor="@drawable/x8_ai_fly_items_text_selector"
                android:textSize="@dimen/textsize_36" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ai_follow_parallel"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/img_ai_follow_parallel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/x8_img_ai_follow_parallel1" />

            <TextView
                android:id="@+id/tv_ai_follow_parallel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ai_follow_parallel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="@string/x8_ai_fly_follow_parallel"
                android:textColor="@drawable/x8_ai_fly_items_text_selector"
                android:textSize="@dimen/textsize_36" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ai_follow_lockup"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:id="@+id/img_ai_follow_lockup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/x8_btn_ai_follow_lockup" />

            <TextView
                android:id="@+id/tv_ai_follow_lockup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_ai_follow_lockup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="@string/x8_ai_fly_follow_lockup"
                android:textColor="@drawable/x8_ai_fly_items_text_selector"
                android:textSize="@dimen/textsize_36" />
        </RelativeLayout>
    </LinearLayout>

    <com.fimi.kernel.percent.PercentRelativeLayout
        android:id="@+id/rl_ai_follow_info_confirm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/img_follow_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="13.666%" />

        <ScrollView
            android:id="@+id/sv_ai_items"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/btn_ai_follow_confirm_ok"
            android:layout_below="@+id/img_follow_flag"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="18.0dip">

                    <TextView
                        android:id="@+id/tv_ai_follow_confirm_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18.0dip"
                        android:text="@string/x8_ai_fly_follow_normal_tip1"
                        android:textColor="@color/white_90"
                        android:textSize="@dimen/textsize_36" />

                    <TextView
                        android:id="@+id/tv_ai_follow_confirm_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ai_follow_confirm_title1"
                        android:layout_marginLeft="18.0dip"
                        android:layout_marginTop="10.0dip"
                        android:text="@string/x8_ai_fly_follow_normal_tip2"
                        android:textColor="@color/white_90"
                        android:textSize="@dimen/textsize_36" />

                    <CheckBox
                        android:id="@+id/cb_ai_follow_confirm_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ai_follow_confirm_title2"
                        android:layout_marginLeft="18.0dip"
                        android:layout_marginTop="13.0dip"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/checkbox_selector"
                        android:drawablePadding="5.0dip"
                        android:text="@string/x8_ai_fly_follow_tip3"
                        android:textColor="@color/white_90"
                        android:textSize="@dimen/textsize_36" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_ai_follow_confirm_ok"
            android:layout_width="@dimen/x8s_ai_takeoff_layout_x4"
            android:layout_height="@dimen/x8s_ai_takeoff_layout_x3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8s_ai_takeoff_layout_x2"
            android:background="@drawable/x8_btn_white_selector"
            android:text="@string/x8_ai_fly_follow_ok"
            android:textColor="@color/black_90"
            android:textSize="@dimen/textsize_36" />
    </com.fimi.kernel.percent.PercentRelativeLayout>
</com.fimi.kernel.percent.PercentRelativeLayout>