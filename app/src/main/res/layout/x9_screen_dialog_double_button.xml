<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fimisdk_shape_dialog_content_bg">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="251.6dip"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="12.299988dip"
                android:layout_marginRight="20.0dip"
                android:gravity="center"
                android:textColor="#ff3a3a3a"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/msg_tv"
                android:layout_width="251.6dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="18.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginBottom="39.299988dip"
                android:gravity="center"
                android:textColor="#cc3a3a3a"
                android:textSize="12.599976dip" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_double"
            android:layout_width="251.6dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_content"
            android:layout_alignLeft="@+id/rl_content"
            android:layout_alignRight="@+id/rl_content">

            <Button
                android:id="@+id/left_btn"
                android:layout_width="fill_parent"
                android:layout_height="52.0dip"
                android:layout_alignParentLeft="true"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/fimisdk_textcolor_selector"
                android:textSize="14.0sp" />

            <Button
                android:id="@+id/right_btn"
                android:layout_width="fill_parent"
                android:layout_height="52.0dip"
                android:layout_toRightOf="@+id/left_btn"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/ensure"
                android:textColor="@drawable/fimisdk_textcolor_selector"
                android:textSize="14.0sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>