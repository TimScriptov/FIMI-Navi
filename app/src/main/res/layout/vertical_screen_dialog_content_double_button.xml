<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="39.299988dip"
        android:layout_marginTop="19.299988dip"
        android:textColor="#b2000000"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_tv"
        android:layout_marginTop="30.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="fill_parent"
            android:layout_height="52.599976dip"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.0"
            android:background="@drawable/fimisdk_selector_dialog_btn_left"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#7fffffff"
            android:textSize="14.0sp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="fill_parent"
            android:layout_height="52.599976dip"
            android:layout_toRightOf="@+id/left_btn"
            android:layout_weight="1.0"
            android:background="@drawable/fimisdk_selector_dialog_btn_right"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="#7fffffff"
            android:textSize="14.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29.0dip"
        android:text="确认退出吗？"
        android:textColor="#ff000000"
        android:textSize="14.0sp" />
</RelativeLayout>