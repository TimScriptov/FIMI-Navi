<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x8s_view_custom_dialog_x7"
    android:layout_height="wrap_content"
    android:background="@drawable/x8_shape_dialog_content_bg"
    android:gravity="center"
    android:orientation="vertical">

    <com.fimi.kernel.percent.PercentLinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8s_view_custom_dialog_x1"
        android:layout_marginTop="@dimen/x8s_view_custom_dialog_x1"
        android:layout_marginRight="@dimen/x8s_view_custom_dialog_x1"
        android:background="@drawable/x8_img_double_dialog_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_view_custom_dialog_x4"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39" />

        <ImageView
            android:id="@+id/x8_iv_playback_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="39.8%w"
            app:layout_marginTopPercent="4.321%h" />

        <ProgressBar
            android:id="@+id/x8_pb_playback_plan"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_centerHorizontal="true"
            android:background="@color/white_20"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/x8_revision_layer_progress"
            app:layout_marginLeftPercent="14.15%w"
            app:layout_marginRightPercent="14.15%w"
            app:layout_marginTopPercent="5.39%h" />

        <TextView
            android:id="@+id/x8_tv_playback_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0%"
            android:textColor="@color/white_100"
            android:textSize="@dimen/textsize_39"
            app:layout_marginLeftPercent="45.42%w"
            app:layout_marginRightPercent="45.32%w"
            app:layout_marginTopPercent="4.63%h" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x8s_view_custom_dialog_x3" />
    </com.fimi.kernel.percent.PercentLinearLayout>

    <View
        android:id="@+id/img_divide"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x8s_view_custom_dialog_x1"
        android:layout_below="@+id/layout_content"
        android:layout_marginLeft="@dimen/x8s_view_custom_dialog_x1"
        android:layout_marginRight="@dimen/x8s_view_custom_dialog_x1"
        android:background="#8000e8fd" />

    <Button
        android:id="@+id/tv_sure"
        android:layout_width="@dimen/x8s_view_custom_dialog_x7"
        android:layout_height="@dimen/x8s_view_custom_dialog_x6"
        android:layout_below="@+id/img_divide"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x8s_view_custom_dialog_x1"
        android:layout_marginRight="@dimen/x8s_view_custom_dialog_x1"
        android:layout_marginBottom="@dimen/x8s_view_custom_dialog_x1"
        android:background="@drawable/x8_img_double_dialog_single_selector"
        android:text="@string/cancel"
        android:textColor="@color/white_100"
        android:textSize="14.0dip" />
</RelativeLayout>