<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_play_rl"
    android:layout_width="fill_parent"
    android:layout_height="67.0dip"
    android:layout_alignParentBottom="true"
    android:background="#cc1f1f21">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.33000004dip"
        android:background="#26ffffff" />

    <ImageButton
        android:id="@+id/play_btn"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15.0dip"
        android:background="#00000000"
        android:src="@drawable/album_icon_play_media"
        android:visibility="visible" />

    <TextView
        android:id="@+id/time_current_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_toRightOf="@+id/play_btn"
        android:textColor="#ffffffff"
        android:textSize="12.0sp" />

    <SeekBar
        android:id="@+id/play_sb"
        style="@style/Widget.SeekBar.Normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_current_tv"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_toRightOf="@+id/play_btn"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="1.0dip"
        android:thumb="@drawable/album_play_speed" />

    <TextView
        android:id="@+id/total_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="30.0dip"
        android:textColor="#ffffffff"
        android:textSize="12.0sp" />
</RelativeLayout>