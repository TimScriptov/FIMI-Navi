<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_group"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/x8_img_return" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_title_categoly"
            android:layout_width="400.0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5.0dip"
            app:tabBackground="@null"
            app:tabGravity="center"
            app:tabIndicatorHeight="0.0dip"
            app:tabSelectedTextColor="@color/white_100"
            app:tabTextColor="@color/x8_track_select" />
    </RelativeLayout>

    <com.fimi.album.widget.HackyViewPager
        android:id="@+id/viewpaper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_head"
        android:background="#ff000000" />
</RelativeLayout>