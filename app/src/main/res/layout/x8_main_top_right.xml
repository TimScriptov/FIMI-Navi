<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/x8_iv_top_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_main_top_right_x3"
            android:background="@drawable/x8_main_gps_single_unconnect" />

        <TextView
            android:id="@+id/x8_iv_top_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_main_top_right_x4"
            android:layout_toRightOf="@+id/x8_iv_top_gps"
            android:text="@string/x8_na"
            android:textColor="@color/white_80"
            android:textSize="13.0dip" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/x8_iv_top_fpv_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_main_top_right_x2"
            android:background="@drawable/x8_main_fpv_signal_unconnect" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/x8_iv_top_handle_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_main_top_right_x2"
            android:background="@drawable/x8_main_handle_signal_unconnect" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <ImageView
            android:id="@+id/x8_iv_top_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8s_main_top_right_x2"
            android:background="@drawable/x8_main_battery_unconnect" />

        <com.fimi.app.x8s.widget.X8MiLantingStrokeTextView
            android:id="@+id/x8_tv_top_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8s_main_top_right_x1"
            android:layout_marginTop="@dimen/x8s_main_top_right_x2"
            android:layout_toRightOf="@+id/x8_iv_top_battery"
            android:maxLines="1"
            android:text="@string/x8_na"
            android:textColor="@color/white_80"
            android:textSize="@dimen/x8s_main_top_right_x5" />

        <com.fimi.app.x8s.widget.X8MiLantingStrokeTextView
            android:id="@+id/x8_tv_top_battery_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/x8_tv_top_battery"
            android:layout_marginLeft="@dimen/x8s_main_top_right_x1"
            android:layout_toRightOf="@+id/x8_iv_top_battery"
            android:text="@string/x8_na"
            android:textColor="@color/white_80"
            android:textSize="@dimen/x8s_main_top_right_x5" />
    </RelativeLayout>
</merge>