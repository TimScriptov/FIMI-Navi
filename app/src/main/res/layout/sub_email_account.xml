<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <EditText
        android:id="@+id/et_email_account"
        android:layout_width="fill_parent"
        android:layout_height="86.29999dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84.29999dip"
        android:background="@drawable/shape_et_email_register"
        android:gravity="top"
        android:hint="@string/login_input_email_account"
        android:inputType="textEmailAddress"
        android:textColor="#e6000000"
        android:textColorHint="#33000000"
        android:textCursorDrawable="@drawable/shape_login_cursor_color"
        android:textSize="12.0dip" />

    <EditText
        android:id="@+id/et_email_password"
        android:layout_width="fill_parent"
        android:layout_height="43.299988dip"
        android:layout_alignLeft="@+id/et_email_account"
        android:layout_alignBottom="@+id/et_email_account"
        android:background="@drawable/shape_et_email_password_register"
        android:digits="@string/person_password_digts"
        android:hint="@string/login_inpput_password"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColor="#e6000000"
        android:textColorHint="#33000000"
        android:textCursorDrawable="@drawable/shape_login_cursor_color"
        android:textSize="12.0dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignLeft="@+id/et_email_account"
        android:layout_alignTop="@+id/et_email_account"
        android:layout_alignRight="@+id/et_email_account"
        android:layout_marginTop="43.299988dip"
        android:background="#26000000" />

    <View
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/et_email_password"
        android:layout_alignRight="@+id/et_email_password"
        android:layout_alignBottom="@+id/et_email_password"
        android:layout_marginTop="13.299988dip"
        android:layout_marginRight="53.599976dip"
        android:layout_marginBottom="13.299988dip"
        android:background="#26000000" />

    <ImageView
        android:id="@+id/iv_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_email_password"
        android:layout_alignRight="@+id/et_email_password"
        android:layout_marginRight="5.299988dip"
        android:background="@drawable/iv_login_email_password" />

    <TextView
        android:id="@+id/tv_email_error_hint"
        android:layout_width="324.0dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11.299988dip"
        android:text="@string/login_email_error_hint"
        android:textColor="#ffff4a1a"
        android:textSize="12.0dip"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_email_select_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.299988dip"
        android:layout_marginTop="234.6dip"
        android:button="@drawable/cb_register_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_email_select_service"
        android:layout_width="259.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.599976dip"
        android:layout_marginTop="235.29999dip"
        android:layout_toRightOf="@+id/cb_email_select_service"
        android:textSize="12.0dip"
        android:visibility="invisible" />
</RelativeLayout>