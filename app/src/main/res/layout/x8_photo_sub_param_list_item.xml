<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/x8_photo_subItem_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/sub_option_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x8s_photo_sub_param_list_item_x5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x4"
        android:gravity="center_vertical"
        android:text="@string/x8_camera_digita"
        android:textColor="@drawable/x8_camera_value_enable_selector"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/sub_option_value"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x8s_photo_sub_param_list_item_x5"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x3"
        android:layout_toRightOf="@+id/sub_option_name"
        android:gravity="center"
        android:textColor="@color/x8_value_select"
        android:textSize="12.0dip"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sub_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_option_name"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x4" />

    <ViewStub
        android:id="@+id/camera_style_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_option_name"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x4"
        android:layout="@layout/x8_camera_style_sub_layout" />

    <ViewStub
        android:id="@+id/camera_sharp_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_option_name"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x4"
        android:layout="@layout/x8_camera_sharp_param_stub_layout" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x8s_photo_sub_param_list_item_x1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x8s_photo_sub_param_list_item_x2"
        android:background="@color/white_10"
        android:focusable="false" />
</RelativeLayout>