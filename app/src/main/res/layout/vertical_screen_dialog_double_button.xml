<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset"
    android:paddingLeft="8.0dip"
    android:paddingRight="8.0dip">

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34.0dip"
        android:gravity="center"
        android:text="确认退出吗？"
        android:textColor="#80000000"
        android:textSize="13.299988sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_tv"
        android:layout_marginTop="32.669983dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_btn"
            android:layout_width="fill_parent"
            android:layout_height="52.599976dip"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.0"
            android:background="@drawable/btn_dialog_left_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#b2000000"
            android:textSize="14.0sp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="fill_parent"
            android:layout_height="52.599976dip"
            android:layout_toRightOf="@+id/left_btn"
            android:layout_weight="1.0"
            android:background="@drawable/btn_dialog_right_selector"
            android:gravity="center"
            android:text="@string/ensure"
            android:textColor="#b2000000"
            android:textSize="14.0sp" />
    </LinearLayout>
</RelativeLayout>