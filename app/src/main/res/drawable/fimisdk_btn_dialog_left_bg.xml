<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffe5e5e5" />
            <corners android:bottomLeftRadius="4.333dp" />
            <stroke android:width="0.333dp" android:bottom="-2dp" android:color="#33000000" android:left="-2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff2f2f2" />
            <corners android:bottomLeftRadius="4.333dp" />
            <stroke android:width="0.333dp" android:bottom="-2dp" android:color="#33000000" android:left="-2dp" />
        </shape>
    </item>
</selector>
